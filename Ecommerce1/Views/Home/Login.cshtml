@model Ecommerce1.Models.Cliente
@{

    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE HTML>
<head>
    <title>Free Home Shoppe Website Template | Contact :: w3layouts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href="@Url.Content("~/Content/t/css/style.css")" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="@Url.Content("~/Content/t/js/jquery-1.7.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/t/js/move-top.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/t/js/easing.js")"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">


            <div class="header_top">
                <div class="logo">
                    <a href="@Url.Action("Index","Produtos")"><img src="@Url.Content("~/Content/t/images/logo.png")" alt="" /></a>
                </div>
                <div class="cart">
                    <p>
                        Welcome to our Online Store! <span>Cart:</span><div id="dd" class="wrapper-dropdown-2">
                            0 item(s) - $0.00
                            <ul class="dropdown">
                                <li>you have no items in your Shopping cart</li>
                            </ul>
                        </div>
                    </p>
                </div>
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                <div class="menu">
                    <ul>
                        <li><a href="@Url.Action("Index","Produtos")">Home</a></li>
                        <li class="active"><a href="@Url.Action("Login","Clientes")">Login</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Minha Conta</a></li>
                        <li><a href="@Url.Action("Create","Clientes")">Cadastro</a></li>
                        <li><a href="@Url.Action("Index","Cart")">Carrinho</a></li>
                        <li><a href="@Url.Action("Contato","Produtos")">Contato</a></li>
                        <li><a href="@Url.Action("Index","Admin")">Admin</a></li>
                        <div class="clear"></div>
                    </ul>
                </div>
                <div class="search_box">
                    <form>
                        <input type="text" value="Buscar" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="main">
            <div class="content">
                <div class="section group">
                    <div class="col span_2_of_3">
                        <div class="contact-form">
                            <h2>Login</h2>

                            
                            @using (Html.BeginForm("Login", "Clientes", FormMethod.Post))
                            {


                                <div class="form-horizontal">

                                    <hr />


                                    <div class="form-group">
                                        <span><label>Email</label></span>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.email, new { @class = "form-control" })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <span><label>Senha</label></span>
                                        <div class="col-md-10">
                                            @Html.PasswordFor(model => model.senha, new { @class = "form-control" })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Login" class="btn btn-default" />
                                        </div>
                                    </div>



                                </div>
                            }
                            @ViewBag.error
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Minha Conta</h4>
                    <ul>
                        <li><a href="@Url.Action("Login","Clientes")">Login</a></li>
                        <li><a href="@Url.Action("Carrinho","Produtos")">Carrinho de Compras</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Pedidos</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Dados Pessoais</a></li>

                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contato</h4>
                    <ul>
                        <li><span>(47)8861-0000</span></li>
                        <li><span>(47)3371-0000</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Sigam nos</h4>
                        <ul>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/Content/t/images/facebook.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/Content/t/images/Content/twitter.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/Content/t/images/skype.png")" alt="" /> </a></li>
                            <li><a href="#" target="_blank"> <img src="@Url.Content("~/Content/t/images/dribbble.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"> <img src="@Url.Content("~/Content/t/images/linkedin.png")" alt="" /></a></li>
                            <div class="clear"></div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>

