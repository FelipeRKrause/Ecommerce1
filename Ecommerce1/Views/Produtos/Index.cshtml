@model IEnumerable<Ecommerce1.Models.Produto>

@using Ecommerce1.Repository

@{ ICategoriaRepository iCategoriaRepository = new CategoriaRepository();
    
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE HTML>
<head>
    <title>Ecommerce</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="@Url.Content("~/t/css/style.css")" rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/t/css/slider.css")" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="@Url.Content("~/t/js/jquery-1.7.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/t/js/move-top.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/t/js/easing.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/t/js/startstop-slider.js")"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="header_top">
                <div class="logo">
                    <a href="@Url.Action("Index","Produtos")"><img src="@Url.Content("~/t/images/logo.png")" alt="" /></a>
                </div>
                <div class="cart">
                    <p>
                        Welcome to our Online Store! <span>Cart:</span><div id="dd" class="wrapper-dropdown-2">
                            0 item(s) - $0.00
                            <ul class="dropdown">
                                <li>you have no items in your Shopping cart</li>
                            </ul>
                        </div>
                    </p>
                </div>
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                <div class="menu">
                    <ul>                      
                        <li class="active"><a href="@Url.Action("Index","Produtos")">Home</a></li>
                        <li><a href="@Url.Action("Login","Clientes")">Login</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Minha Conta</a></li>
                        <li><a href="@Url.Action("Create","Clientes")">Cadastro</a></li>
                        <li><a href="@Url.Action("Index","Cart")">Carrinho</a></li>
                        <li><a href="@Url.Action("Contato","Produtos")">Contato</a></li>
                        <li><a href="@Url.Action("Index","Admin")">Admin</a></li>
                        
                        <div class="clear"></div>
                    </ul>
                </div>
                <div class="search_box">
                    <form>
                        <input type="text" value="Buscar" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_slide">
                <div class="header_bottom_left">
                    <div class="categories">
                        <ul>
                            @foreach (var categoria in iCategoriaRepository.findAll())
                            {

                                <li><a href="@Url.Action("Categorias","Produtos", new { id=categoria.idCategoria})">@categoria.nome</a></li>

                            }
                        </ul>
                    </div>
                </div>
                <div class="header_bottom_right">
                    <div class="slider">
                        <div id="slider">
                            <div id="mover">
                                <div id="slide-1" class="slide">
                                    <div class="slider-img">
                                        <a href="preview.html"><img src="../t/images/slide-1-image.png" alt="learn more" /></a>
                                    </div>
                                    <div class="slider-text">
                                        <h1>PROMO20<br><span>Som</span></h1>
                                        <h2>20% OFF</h2>
                                        <div class="features_list">
                                            <h4>Toda a Categoria de Som, com desconto de 20%</h4>
                                        </div>
                                        <a href="@Url.Action("Categorias","Produtos", new { id=7 })" class="button">Confira</a>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="slide">
                                    <div class="slider-text">
                                        <h1>PROMO40<br><span></span></h1>
                                        <h2>40% OFF</h2>
                                        <div class="features_list">
                                            <h4>Toda a Categoria de Monitores com desconto de ate 40%</h4>
                                        </div>
                                        <a href="@Url.Action("Categorias","Produtos", new { id=3 })" class="button">Confira</a>
                                    </div>
                                    <div class="slider-img">
                                        <a href="preview.html"><img src="../t/images/slide-3-image.jpg" alt="learn more" /></a>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="slide">
                                    <div class="slider-img">
                                        <a href="preview.html"><img src="../t/images/slide-2-image.jpg" alt="learn more" /></a>
                                    </div>
                                    <div class="slider-text">
                                        <h1>PROMO10<br><span></span></h1>
                                        <h2>10% OFF</h2>
                                        <div class="features_list">
                                            <h4>Toda a Categoria de Monitores com desconto de ate 10% no Boleto</h4>
                                        </div>
                                        <a href="@Url.Action("Categorias","Produtos", new { id=3 })" class="button">Confira</a>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="main">
            <div class="content">
                <div class="content_top">
                    <div class="heading">
                        <h3>Produtos</h3>
                    </div>

                    <div class="clear"></div>
                </div>
                <div class="section group">
                    @foreach (var item in Model)
                    {
                        <div class="grid_1_of_4 images_1_of_4">
                            <a href="@Url.Action("Detalhes","Produtos", new { id = item.idProduto})"><img src="../t/images/@Html.DisplayFor(modelItem => item.foto)" alt="" /></a>
                            <h2>@Html.DisplayFor(modelItem => item.nome)</h2>
                            <div class="price-details">
                                <div class="price-number">
                                    <p><span class="rupees">@Html.DisplayFor(modelItem => item.preco)</span></p>
                                </div>
                                <div class="add-cart">
                                    <h4><a href="@Url.Action("Add","Cart", new { id = item.idProduto })">Adicionar no Carrinho</a></h4>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Minha Conta</h4>
                    <ul>
                        <li><a href="@Url.Action("Login","Clientes")">Login</a></li>
                        <li><a href="@Url.Action("Carrinho","Produtos")">Carrinho de Compras</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Pedidos</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Dados Pessoais</a></li>

                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contato</h4>
                    <ul>
                        <li><span>(47)8861-0000</span></li>
                        <li><span>(47)3371-0000</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Sigam nos</h4>
                        <ul>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/t/images/facebook.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/t/images/twitter.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/t/images/skype.png")" alt="" /> </a></li>
                            <li><a href="#" target="_blank"> <img src="@Url.Content("~/t/images/dribbble.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"> <img src="@Url.Content("~/t/images/linkedin.png")" alt="" /></a></li>
                            <div class="clear"></div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>

