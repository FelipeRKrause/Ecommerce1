@using Ecommerce1.Repository

@{ ICategoriaRepository iCategoriaRepository = new CategoriaRepository();

    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE HTML>
<head>
    <title>Free Home Shoppe Website Template | Preview :: w3layouts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="@Url.Content("~/t/css/style.css")" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="@Url.Content("~/t/js/jquery-1.7.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/t/js/move-top.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/t/js/easing.js")"></script>
    <script src="@Url.Content("~/t/js/easyResponsiveTabs.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/t/css/easy-responsive-tabs.css")" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="@Url.Content("~/t/css/global.css")">

    <script>
        $(function () {
            $('#products').slides({
                preload: true,
                preloadImage: '@Url.Action("~/t/img/loading.gif")',
                effect: 'slide, fade',
                crossfade: true,
                slideSpeed: 350,
                fadeSpeed: 500,
                generateNextPrev: true,
                generatePagination: false
            });
        });
    </script>
</head>
<body>
    <div class="wrap">
        <div class="header">

            <div class="header_top">
                <div class="logo">
                    <a href="@Url.Action("Index","Produtos")"><img src="@Url.Content("~/t/images/logo.png")" alt="" /></a>
                </div>
                <div class="cart">
                    <p>
                        Welcome to our Online Store! <span>Cart:</span><div id="dd" class="wrapper-dropdown-2">
                            0 item(s) - $0.00
                            <ul class="dropdown">
                                <li>you have no items in your Shopping cart</li>
                            </ul>
                        </div>
                    </p>
                </div>
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                <div class="menu">
                    <ul>
                        <li><a href="@Url.Action("Index","Produtos")">Home</a></li>
                        <li><a href="@Url.Action("Login","Clientes")">Login</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Minha Conta</a></li>
                        <li><a href="@Url.Action("Create","Clientes")">Cadastro</a></li>
                        <li><a href="@Url.Action("Index","Cart")">Carrinho</a></li>
                        <li><a href="@Url.Action("Contato","Produtos")">Contato</a></li>
                        <li><a href="@Url.Action("Index","Admin")">Admin</a></li>

                        <div class="clear"></div>
                    </ul>
                </div>
                <div class="search_box">
                    <form>
                        <input type="text" value="Buscar" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="main">
            <div class="content">

                <div class="section group">
                    <div class="cont-desc span_1_of_2">
                        <div class="product-details">
                            <div class="grid images_3_of_2">
                                <div id="container">
                                    <div id="products_example">
                                        <div id="products">
                                            <div class="section group">
                                                <div class="grid_1_of_4 images_1_of_4" style="width: 80.8%;>
                                                    <a href="#"><img src="@Url.Content("~/t/images/")@ViewBag.produto.foto" alt=" "></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="desc span_3_of_2">
                                <h2>@ViewBag.produto.nome</h2>
                                <div class="price">
                                    <p>Preço: <span>R$@ViewBag.produto.preco</span></p>
                                </div>

                                <div class="share-desc">
                                    <div class="button"><span><a href="@Url.Action("Add","Cart", new { id = ViewBag.produto.idProduto })">Adicionar no Carrinho</a></span></div>
                                    <div class="clear"></div>
                                </div>

                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="product_desc">
                            <div id="horizontalTab">
                                <ul class="resp-tabs-list">
                                    <li>Detalhes do Produto</li>

                                    <div class="clear"></div>
                                </ul>
                                <div class="resp-tabs-container">
                                    <div class="product-desc">
                                        <p>@ViewBag.produto.descricao
                                    </div>


                                </div>
                            </div>
                        </div>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $('#horizontalTab').easyResponsiveTabs({
                                    type: 'default', //Types: default, vertical, accordion
                                    width: 'auto', //auto or any width like 600px
                                    fit: true   // 100% fit in a container
                                });
                            });
                        </script>


                    </div>
                    <div class="rightsidebar span_3_of_1">
                        <h2>Categorias</h2>
                        <ul>
                            @foreach (var categoria in iCategoriaRepository.findAll())
                            {

                                <li><a href="@Url.Action("Categorias","Produtos", new { id=@categoria.idCategoria})">@categoria.nome</a></li>

                            }
                        </ul>


                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Minha Conta</h4>
                    <ul>
                        <li><a href="@Url.Action("Login","Clientes")">Login</a></li>
                        <li><a href="@Url.Action("Carrinho","Produtos")">Carrinho de Compras</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Pedidos</a></li>
                        <li><a href="@Url.Action("MyAccount","Clientes")">Dados Pessoais</a></li>

                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contato</h4>
                    <ul>
                        <li><span>(47)8861-0000</span></li>
                        <li><span>(47)3371-0000</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Sigam nos</h4>
                        <ul>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/t/images/facebook.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/t/images/twitter.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="@Url.Content("~/t/images/skype.png")" alt="" /> </a></li>
                            <li><a href="#" target="_blank"> <img src="@Url.Content("~/t/images/dribbble.png")" alt="" /></a></li>
                            <li><a href="#" target="_blank"> <img src="@Url.Content("~/t/images/linkedin.png")" alt="" /></a></li>
                            <div class="clear"></div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>

