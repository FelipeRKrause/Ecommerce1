@model IEnumerable<Ecommerce1.Models.Categoria>

@{
    ViewBag.Title = "Lista de Categorias";
}

<h2>Lista de Categorias</h2>

<p>
    @Html.ActionLink("Create New", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.idCategoria }) |
            @Html.ActionLink("Details", "DetailsCategory", new { id=item.idCategoria }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id=item.idCategoria })
        </td>
    </tr>
}

</table>
